OBJDIR = ../../obj/gcc/fmp/addressbook
REOBJDIR = \.\.\/\.\.\/obj\/gcc\/fmp\/addressbook\/
DLLDIR = ../../bin/FMP/AddressBook
DLLNAME = addressbook.gcc.fmp
DLLFULLNAME = $(DLLDIR)/$(DLLNAME)
SRCS = addressbook.cpp memory.cpp registry.cpp
DEF = addressbook.gcc.def

CXX = g++
DLLTOOL = dlltool
RM = rm -f
CP = cp -f
M4 = m4 -P -DCMD=..\\\\FARMail\\\\gen_date.exe
MV = mv -f
MKDIR = mkdir -p
CXXFLAGS = -Os -funsigned-char -fomit-frame-pointer -fstrict-aliasing -fno-rtti -fno-exceptions
LNKFLAGS = -mdll -s -nostartfiles
DOCS = $(DLLDIR)/example.adr $(DLLDIR)/addressbook.fml $(DLLDIR)/addressbooke.hlf $(DLLDIR)/addressbookr.hlf

all: $(DLLFULLNAME) $(DOCS)

OBJS = $(patsubst %.cpp,$(OBJDIR)/%.o,$(filter %.cpp,$(SRCS)))
DEPS = $(patsubst %.cpp,$(OBJDIR)/%.d,$(filter %.cpp,$(SRCS)))

$(OBJS) $(DEPS): $(OBJDIR)
$(DLLFULLNAME): $(DLLDIR)
$(DOCS): $(DLLDIR)

$(OBJDIR)/%.d: %.cpp
	@echo making depends for $<
	@$(SHELL) -ec '$(CXX) -c -MM $(CXXFLAGS) $< \
                | sed '\''s/\($*\)\.o[ :]*/$(REOBJDIR)\1.o $(REOBJDIR)\1.d: /g'\'' > $@; [ -s $@ ] || $(RM) $@'

$(OBJDIR)/%.o: %.cpp
	@echo compiling $<
	@$(CXX) $(CXXFLAGS) -c -o $@ $<

$(DLLFULLNAME): $(OBJS) $(DEF)
	@echo linking $@
	$(CXX) -mdll -o $(DLLNAME) -Xlinker --base-file -Xlinker $(DLLNAME).base $(OBJS) $(LNKFLAGS)
	$(DLLTOOL) --dllname $(DLLNAME) --base-file $(DLLNAME).base --output-exp $(DLLNAME).exp --def $(DEF)
	$(CXX) -mdll  -o $(DLLNAME) $(OBJS) $(DLLNAME).exp $(LNKFLAGS)
	$(MV) $(DLLNAME) $(DLLDIR)
	$(RM) $(DLLNAME).base
	$(RM) $(DLLNAME).exp

-include $(DEPS)

$(DLLDIR)/addressbook.fml: addressbook.fml
	$(CP) $< $@
$(DLLDIR)/addressbooke.hlf: addressbooke.hlf.m4 ../FARMail/fm_version.m4
	$(M4) addressbooke.hlf.m4 > $@
$(DLLDIR)/addressbookr.hlf: addressbookr.hlf.m4 ../FARMail/fm_version.m4
	$(M4) addressbookr.hlf.m4 > $@
$(DLLDIR)/example.adr: example.adr
	$(CP) $< $@

$(OBJDIR):
	if !(test -d $@) then $(MKDIR) $@; fi
$(DLLDIR):
	if !(test -d $@) then $(MKDIR) $@; fi

clean:
	@echo cleaning up
	@$(RM) $(DEPS) $(OBJS)
