<!--
Settings for message files for [ESC] plug-in by Ivan Sintyurin.
To use this file copy it to the "Cfg" folder where you installed
[ESC], you can safely overwrite the existing one.
For this to work correctly set the hotkey of FARMail to `F'
and import the supplied *.reg files into the registry.
-->
<Esc-Settings>
  <Types>

    <type name="message" mask="*.msg,*.eml,*.nws" inherit="Texts">
      <margin wrap="72" justify="off"/>
      <quote value="on" quoteeol="off"/>
      <kill p_minuses="on"/>
      <usermacro value="on">
        <macro key="AltShiftD" sequence="CtrlD Enter Home [ . . . S k i p . . . ] Enter Home" selection="stream"/>
        <macro key="CtrlShiftS" sequence="F11 F 1 Enter" selection="ignore"/>
        <macro key="CtrlShiftA" sequence="F11 F 0 H 1" selection="ignore"/>
        <macro key="CtrlShiftI" sequence="F11 F 0 H 2" selection="ignore"/>
        <macro key="CtrlV" sequence="F11 F 0 H 3 CtrlV" selection="ignore"/>
        <macro key="Alt/" sequence="F11 F 0 A" selection="ignore"/>

        <macro key="F8" sequence="ShiftF8 Down Enter" selection="ignore"/>

        <macro key="CtrlShiftN" sequence="F11 F 0 S A" selection="ignore"/>
        <macro key="CtrlShiftR" sequence="F11 F 0 S B" selection="ignore"/>
        <macro key="CtrlShiftC" sequence="F11 F 0 S C" selection="ignore"/>
        <macro key="CtrlShiftF" sequence="F11 F 0 S D" selection="ignore"/>
      </usermacro>
    </type>

  </Types>
</Esc-Settings>
